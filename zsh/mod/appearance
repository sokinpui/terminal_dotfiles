#!/usr/bin/env zsh
#   Appearance
# Prompt
# git branch
setopt PROMPT_SUBST

function virtualenv_info {
    [ $VIRTUAL_ENV ] && echo '('`basename $VIRTUAL_ENV`')'
}

precmd () {
  __git_ps1 "$(virtualenv_info)%B%F{red}[%f%n@%m${shellEmulator} %F{cyan}%~%f%F{red}]%f%b" "
%BÂ»%b " "|%s"
}
PS2='%F{green}%_>%f '
