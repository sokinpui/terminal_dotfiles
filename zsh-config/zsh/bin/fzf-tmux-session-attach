#!/usr/bin/env bash


if [[ $# -eq 1 ]]; then
  selected=$1
else
  search_directory="$cuhk_dir $cuhk_dir/year1 $cuhk_dir/year2 \
    $personal_repo $My_data $my_notes $my_notes/math \
    $hugo_blog_content"
  selected=$(fd --max-depth=1 --min-depth=1 --type=directory --type=symlink . $search_directory | sort | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s $selected_name -c $selected
  exit 0
fi
selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t=$selected_name 2> /dev/null; then
  tmux new-session -d -s $selected_name -c $selected
fi

tmux switch-client -t $selected_name

